<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:PriceSetterDesktop.ViewModel"
                    xmlns:ec="clr-namespace:WPFCollection.Style.Model;assembly=WPFCollection"
                    xmlns:i="http://schemas.microsoft.com/xaml/behaviors">
  <Style TargetType="{x:Type vm:ArticleViewModel}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type vm:ArticleViewModel}">
          <Border Padding="10" FlowDirection="RightToLeft">
            <Border.DataContext>
              <vm:ArticleViewModel/>
            </Border.DataContext>
            <!--Main Container-->
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>
              <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
              </Grid.RowDefinitions>
              <!--Editor Part-->
              <Grid Grid.Row="0" Grid.Column="0">
                <Grid.RowDefinitions>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="*"/>
                  <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="Auto"/>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!--Article Name Details-->
                <TextBlock 
                  Text="نام کالا : "
                  Grid.Row="0"
                  Grid.Column="0"/>
                <TextBox
                  Text="{Binding CurrentArticleName , Mode=TwoWay}"
                  Grid.Row="0" 
                  Grid.Column="1" 
                  Grid.ColumnSpan="2" 
                  Margin="0,0,0,0"/>
                <Button 
                  Content="تعریف کالا"
                  Grid.Row="0" 
                  Grid.Column="2"
                  Command="{Binding CreateArticle}"
                  CommandParameter="{Binding RelativeSource={RelativeSource Self} , Path=DataContext}"/>
                <!--URL Address Part-->
                <Border 
                  Grid.Row="1" 
                  Grid.Column="0"
                  Grid.ColumnSpan="3" 
                  Padding="5" 
                  Margin="5">
                  <Grid>
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="Auto"/>
                      <ColumnDefinition Width="*"/>
                      <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                      <RowDefinition Height="Auto"/>
                      <RowDefinition Height="Auto"/>
                      <RowDefinition Height="Auto"/>
                      <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock 
                      Text="آدرس سایت : "
                      Grid.Row="0" 
                      Grid.Column="0"/>
                    <TextBox 
                      Text="{Binding CurrentScrap.URL}"
                      Grid.Row="0" 
                      Grid.Column="1" 
                      Grid.ColumnSpan="3"/>
                    <TextBlock 
                      Text="آدرس قیمت : " 
                      Grid.Row="1"
                      Grid.Column="0"/>
                    <TextBox 
                      Text="{Binding CurrentScrap.XPath}" 
                      Grid.Row="1" 
                      Grid.Column="1" 
                      Grid.ColumnSpan="3"/>
                    <TextBlock 
                      Text="تامین کننده : " 
                      Grid.Row="2" 
                      Grid.Column="0"/>
                    <ec:ItemSelector 
                      View="{Binding ListofArticles.CurrentItem.Provider}"
                      Grid.Row="2" 
                      Grid.Column="1"/>
                    <Button 
                      Content="تعریف تامین کننده"
                      Grid.Row="2"
                      Grid.Column="2"
                      Command="{Binding CreateProvider}"
                      CommandParameter="{Binding RelativeSource={RelativeSource Self} , Path=DataContext}"/>
                    <Button 
                      Content="ثبت" 
                      Grid.Row="3" 
                      Grid.Column="0" 
                      Grid.ColumnSpan="3" 
                      Margin="0,10,0,0"/>
                  </Grid>
                </Border>
                <!--Buttons And Status-->
                <ListView 
                  ItemsSource="{Binding ListofArticles.CurrentItem.URLScrapList}" 
                  Grid.Row="2" 
                  Grid.Column="0" 
                  Grid.ColumnSpan="3">
                  
                </ListView>
                <Button 
                  Content="ثبت" 
                  VerticalAlignment="Bottom" 
                  Grid.Column="0" 
                  Grid.ColumnSpan="3" 
                  Grid.Row="3"/>
              </Grid>
              <!--View List of articles-->
              <Grid 
                Grid.Row="0" 
                Grid.Column="1">
                <ListView 
                  ItemsSource="{Binding ListofArticles}"/>
              </Grid>
            </Grid>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>