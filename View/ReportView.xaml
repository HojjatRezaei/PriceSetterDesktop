<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:PriceSetterDesktop.ViewModel">
  <Style TargetType="{x:Type vm:ReportViewModel}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type vm:ReportViewModel}">
          <Border Padding="5">
            <Grid FlowDirection="RightToLeft">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
              </Grid.RowDefinitions>
              <Border Grid.Column="0"
                      Grid.ColumnSpan="3"
                      Grid.Row="0"
                      Padding="5">
                <ListView ItemsSource="{Binding PriceList}"/>
              </Border>
              <Button Content="خروجی اکسل" 
                      Grid.Row="1" 
                      Grid.Column="3"
                      Command="{Binding ExcelOutputCommand}"
                      CommandParameter="{Binding RelativeSource={RelativeSource Self} , Path=DataContext}"/>
              <Button Content="به روز رسانی قیمت ها" 
                      Grid.Row="1" 
                      Grid.Column="0"
                      Command="{Binding UpdatePricesCommand}"
                      CommandParameter="{Binding RelativeSource={RelativeSource Self} , Path=DataContext}"/>
            </Grid>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>