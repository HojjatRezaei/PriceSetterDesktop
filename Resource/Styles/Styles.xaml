<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style TargetType="{x:Type TextBox}">
    <Setter Property="Foreground" Value="White" />
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="FontFamily" Value="OpenSansRegular"/>
    <Setter Property="FontSize" Value="14" />
    <Setter Property="MinHeight" Value="30"/>
    <Setter Property="MinWidth" Value="100"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
    <Style.Triggers>
      <Trigger Property="IsFocused" Value="True">
        <Setter Property="Background" Value="{StaticResource Gray100Brush}"/>
      </Trigger>
    </Style.Triggers>
    <!--<Setter Property="VisualStateManager.VisualStateGroups">
      <Setter.Value>
        <VisualStateGroup x:Name="CommonStates">
          <VisualState x:Name="Normal" />
          <VisualState x:Name="Disabled">
            <Storyboard>
              <ColorAnimation Storyboard.TargetName="Foreground" Storyboard.TargetProperty="Color" To="{StaticResource Gray600}"/>
            </Storyboard>
          </VisualState>
        </VisualStateGroup>
      </Setter.Value>
    </Setter>-->
  </Style>
  <Style TargetType="{x:Type TextBlock}">
    <Setter Property="Foreground" Value="White" />
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="FontFamily" Value="OpenSansRegular" />
    <Setter Property="FontSize" Value="14" />
  </Style>
  <Style TargetType="{x:Type Button}">
    <Setter Property="Foreground" Value="#242424" />
    <Setter Property="Background" Value="#ac99ea" />
    <Setter Property="FontFamily" Value="OpenSansRegular"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="Padding" Value="14,10"/>
    <Setter Property="MinHeight" Value="44"/>
    <Setter Property="MinWidth" Value="44"/>
    <!--<Setter Property="VisualStateManager.VisualStateGroups">
      <Setter.Value>
        <VisualStateGroup x:Name="CommonStates">
          <VisualState x:Name="Normal" />
          <VisualState x:Name="Disabled">
            <Storyboard>
              <ColorAnimation Storyboard.TargetName="Foreground" Storyboard.TargetProperty="Color" To="{StaticResource Gray200}"/>
              <ColorAnimation Storyboard.TargetName="Background" Storyboard.TargetProperty="Color" To="{StaticResource Gray600}"/>
            </Storyboard>

          </VisualState>
          <VisualState x:Name="PointerOver" />
        </VisualStateGroup>
      </Setter.Value>
    </Setter>-->
  </Style>

  <Style TargetType="{x:Type Border}">
    <Setter Property="BorderBrush" Value="#6E6E6E" />
    <Setter Property="BorderThickness" Value="1"/>
  </Style>
  <Style TargetType="{x:Type Window}">
    <Setter Property="Background" Value="#1f1f1f"/>
  </Style>
</ResourceDictionary>